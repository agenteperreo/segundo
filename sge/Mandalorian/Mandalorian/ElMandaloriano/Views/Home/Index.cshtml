@model ElMandaloriano.Models.ViewModels.IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">NUEVA REPÚBLICA GALÁCTICA</h1>
    <form method="post">
        <table align="center">
            <tr>
                <th>Misiones de la nueva República</th>
            </tr>
            <tr>
                <td>
                    @Html.DropDownListFor(m=>m.Mision.Id, new SelectList(Model.ListaMisiones,"Id","NombreMision",Model.Mision))
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="Ver Detalles de la Misión" /></td>
            </tr>
            <tr>
                <td>
                    <label>@Model.Mision.Descripcion</label>
                </td>
            </tr>
        </table>
    </form>
</div>