<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09_Ejercicio3.MainPage"
             xmlns:modelos="clr-namespace:_09_Ejercicio3.ViewModels">

    <ContentPage.BindingContext>
        <modelos:PersonaViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

            <Label x:Name="lblNombre"
               Text="{Binding Nombre}"/>

            <Entry x:Name="inpNombre"
               Text="{Binding Nombre}"/>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
